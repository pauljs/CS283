<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/button12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button11"
        android:layout_toRightOf="@+id/button11"
        android:enabled="false"
        android:onClick="button12OnClick"
        android:text="-" />

    <Button
        android:id="@+id/button13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button12"
        android:layout_alignBottom="@+id/button12"
        android:layout_toRightOf="@+id/button12"
        android:enabled="false"
        android:onClick="button13OnClick"
        android:text="-" />

    <Button
        android:id="@+id/button21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button12"
        android:layout_toLeftOf="@+id/button12"
        android:enabled="false"
        android:onClick="button21OnClick"
        android:text="-" />

    <Button
        android:id="@+id/button22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button12"
        android:layout_below="@+id/button12"
        android:enabled="false"
        android:onClick="button22OnClick"
        android:text="-" />

    <Button
        android:id="@+id/button23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button22"
        android:layout_alignBottom="@+id/button22"
        android:layout_toRightOf="@+id/button22"
        android:enabled="false"
        android:onClick="button23OnClick"
        android:text="-" />

    <Button
        android:id="@+id/button31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button21"
        android:layout_below="@+id/button21"
        android:enabled="false"
        android:onClick="button31OnClick"
        android:text="-" />

    <Button
        android:id="@+id/button32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button21"
        android:layout_centerHorizontal="true"
        android:enabled="false"
        android:onClick="button32OnClick"
        android:text="-" />

    <Button
        android:id="@+id/button33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button32"
        android:layout_alignBottom="@+id/button32"
        android:layout_alignLeft="@+id/button23"
        android:enabled="false"
        android:onClick="button33OnClick"
        android:text="-" />

    <Button
        android:id="@+id/button11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="142dp"
        android:layout_toLeftOf="@+id/button32"
        android:enabled="false"
        android:onClick="button11OnClick"
        android:text="-" />

    <Button
        android:id="@+id/sendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button11"
        android:layout_marginBottom="14dp"
        android:onClick="sendButtonOnClick"
        android:text="Send" />

    <Button
        android:id="@+id/pollButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sendButton"
        android:layout_below="@+id/button31"
        android:enabled="false"
        android:text="Poll" />

    <EditText
        android:id="@+id/letterEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sendButton"
        android:layout_alignParentLeft="true"
        android:ems="10"
        android:hint="Letter" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/idEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/letterEditText"
        android:layout_alignParentLeft="true"
        android:ems="10"
        android:hint="Id"
        android:inputType="number" />

    <EditText
        android:id="@+id/groupNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/idEditText"
        android:layout_alignParentLeft="true"
        android:ems="10"
        android:hint="Group Name" />

</RelativeLayout>
