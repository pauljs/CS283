<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pollButton"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tictactoe.MainActivity$PlaceholderFragment" >

    <Button
        android:id="@+id/button12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button11"
        android:layout_toRightOf="@+id/button11"
        android:enabled="false"
        android:onClick="button12OnClick"
        android:text="-" />

    <Button
        android:id="@+id/button13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button12"
        android:layout_alignBottom="@+id/button12"
        android:layout_toRightOf="@+id/button12"
        android:enabled="false"
        android:onClick="button13OnClick"
        android:text="-" />

    <Button
        android:id="@+id/button21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button12"
        android:layout_toLeftOf="@+id/button12"
        android:enabled="false"
        android:onClick="button21OnClick"
        android:text="-" />

    <Button
        android:id="@+id/button22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button12"
        android:layout_below="@+id/button12"
        android:enabled="false"
        android:onClick="button22OnClick"
        android:text="-" />

    <Button
        android:id="@+id/button23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button22"
        android:layout_alignBottom="@+id/button22"
        android:layout_toRightOf="@+id/button22"
        android:enabled="false"
        android:onClick="button23OnClick"
        android:text="-" />

    <Button
        android:id="@+id/button31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button21"
        android:layout_below="@+id/button21"
        android:enabled="false"
        android:onClick="button31OnClick"
        android:text="-" />

    <Button
        android:id="@+id/button32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button21"
        android:layout_centerHorizontal="true"
        android:enabled="false"
        android:onClick="button32OnClick"
        android:text="-" />

    <Button
        android:id="@+id/button33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button32"
        android:layout_alignBottom="@+id/button32"
        android:layout_alignLeft="@+id/button23"
        android:enabled="false"
        android:onClick="button33OnClick"
        android:text="-" />

    <EditText
        android:id="@+id/groupNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sendButton"
        android:layout_alignParentLeft="true"
        android:ems="10"
        android:hint="Type Group Name Here" />

    <Button
        android:id="@+id/button11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="142dp"
        android:layout_toLeftOf="@+id/button32"
        android:enabled="false"
        android:onClick="button11OnClick"
        android:text="-" />

    <EditText
        android:id="@+id/idEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/groupNameEditText"
        android:layout_alignLeft="@+id/groupNameEditText"
        android:ems="10"
        android:hint="Type Unique Id Here"
        android:inputType="number" />

    <Button
        android:id="@+id/sendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button11"
        android:layout_alignLeft="@+id/groupNameEditText"
        android:layout_marginBottom="14dp"
        android:text="Send"
        android:onClick = "sendButtonOnClick" />

    <EditText
        android:id="@+id/letterEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/idEditText"
        android:layout_alignRight="@+id/idEditText"
        android:ems="10"
        android:hint="Type Letter Here" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sendButton"
        android:layout_below="@+id/button31"
        android:enabled="false"
        android:text="Poll" />

</RelativeLayout>
